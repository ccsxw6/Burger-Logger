<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1> Eat-Da-Burger! </h1>
            <p>Enter a burger you want to eat then click Submit</p>
        </div>
        <div class="col-md-6 text-center" class="toDo">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-md-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}
					</pre>
                </div>
                <div class="col-md-3 text-center">
                    <form class="devour-form button-size">
                        <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                        <button type="submit" class="btn btn-default">Devour it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center" class="toDo">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center userInput">
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" id="enter_text">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>